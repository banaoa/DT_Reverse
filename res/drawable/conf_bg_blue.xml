    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/ui_common_level1_button_disabled_bg_color" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ui_common_level1_button_bg_color" />
        </shape>
    </item>
