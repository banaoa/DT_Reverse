<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed_bg" />
            <stroke android:width="1.0px" android:color="@color/light_gray_divider_color" />
            <padding android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed_bg" />
            <stroke android:width="1.0px" android:color="@color/light_gray_divider_color" />
            <padding android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/pressed_bg" />
            <stroke android:width="1.0px" android:color="@color/light_gray_divider_color" />
            <padding android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/pure_white" />
            <stroke android:width="1.0px" android:color="@color/light_gray_divider_color" />
            <padding android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" />
        </shape>
    </item>
</selector>