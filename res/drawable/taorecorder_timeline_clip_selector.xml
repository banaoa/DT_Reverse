    <item android:state_checked="true" android:state_selected="true">
        <layer-list>
            <item>
                <color android:color="#ffc52323" />
            </item>
            <item android:right="1.0px">
                <color android:color="#ffc52323" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_checked="false">
        <layer-list>
            <item>
                <color android:color="@color/taorecorder_timeline_bg" />
            </item>
            <item android:right="1.0px">
                <color android:color="@color/taorecorder_timeline_start_color" />
            </item>
        </layer-list>
    </item>
    <item>
        <color android:color="@color/taorecorder_timeline_start_color" />
    </item>
</selector>